@import './variable.styl'
.dlc-primary
  color $primary
.dlc-success
  color $success
.dlc-warning
  color $warning
.dlc-danger
  color $danger
.dlc-bg
  background-color $bg
.dlc-gray
  color $gray
.dlc-title
  color $title
.dlc-disabled.dlc-btn
  color $disableColor
  border-color $disableBorderColor
.bgw
  background-color #fff
.ftw
  color #fff
.box-shadow
  box-shadow: 0px 7px 8px -4px rgba(0,0,0,0.1), 0px 12px 17px 2px rgba(0,0,0,0.1), 0px 5px 22px 4px rgba(0,0,0,0.1) !important;
.border-bottom
  border-bottom 1PX solid $border
.border-top
  border-top 1PX solid $border

